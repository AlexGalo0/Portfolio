---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import GithubIcon from "../components/icons/Github.astro";
import SocialPill from "../components/icons/SocialPill.astro";
import MailIcon from "../components/icons/Mail.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
---

<!-- Hacer traductor -->
<Layout title="Portfolio de Alex Galo - Desarrollador y Programador">
  <main>
    <SectionContainer class="py-44 pb-24">
      <img
        src="https://avatars.githubusercontent.com/u/53360939?v=4?s=400"
        alt="myphoto"
        class="rounded-full size-12"
      />
      <h1
        class="text-white text-5xl font-bold flex justify-center flex-row gap-x-4 pb-10"
      >
        Soy Alex Galo
        <div class="flex justify-center items-center">
          <Badge>Disponible para Trabajar</Badge>
        </div>
      </h1>
      <h2 class="text-1xl opacity-80">
        <span>
          Desarrollador de Software hondureño con +1.5 años de experiencia</span
        > actualmente trabajando como Analista Programador , graduado Cum Laude de
        Ingenieria en Sistemas en la UNAH y con un alto nivel de Inglés. <br />
        Trabajo con distintas herramientas tales como React, Next.JS, Astro , Java
        , Node , Docker y SQL.
      </h2>
      <nav class="flex gap-x-4 mt-10">
        <SocialPill
          href="https://www.linkedin.com/in/alex-daniel-galo-8a4673213/"
        >
          <LinkedInIcon class="w-6 h-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/AlexGalo0">
          <GithubIcon class="w-6 h-6" />
          Github
        </SocialPill>
        <SocialPill href="https://github.com/AlexGalo0">
          <MailIcon class="w-6 h-6" />
          alexgalo246@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer>
      <h2 class="text-2xl semi-bold mb-6">Experiencia Laboral</h2>
      <Experience />
    </SectionContainer>
  </main>
</Layout>
